<div class="card mb-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="" style="width:100%; height: auto;">
    {% else %}
        <img src="{{ '/images/empty.jpg' | imagine_filter('thumb') }}" alt="" style="width:100%; height: auto;">
    {% endif %}

    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.title }}</a>
        </h5>

        <p class="card-text">
            {{ property.description | nl2br }})
        </p>

        <p class="card-text">{{ property.surface }}m² - {{ property.city }} ({{ property.postalCode }})</p>

        <div class="text-primary" style="font-size: 2rem; font-weight: bold">
            {#                                {{ property.price | number_format(0, '', ' ') }} €#}
            {{ property.formattedPrice }} €
        </div>
    </div>
</div>